	keywords = {Biomedical engineering, Health care},
	pages = {581},
	file = {Full Text PDF:/Users/andrejermoshkin/Zotero/storage/LLBDHGJQ/Zeynali et al. - 2025 - Non-invasive blood glucose monitoring using PPG signals with various deep learning models and implem.pdf:application/pdf},
}

