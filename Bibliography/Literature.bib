	pmid = {24461729},
	keywords = {biomarker, Biomarkers, Diabetes mellitus, Diabetic Nephropathies, Disease Progression, disease trajectory, end-stage renal disease (ESRD), Humans, Kidney, Kidney Function Tests, Prognosis, risk factor, Risk Factors},
	pages = {S39--62},
	file = {Volltext:/Users/andrejermoshkin/Zotero/storage/4UWPC7DT/Macisaac et al. - 2014 - Markers of and risk factors for the development and progression of diabetic kidney disease.pdf:application/pdf},
